<h2>Un-eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless Devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if Devoured}}
      <div>{{id}}. {{name}}</div>
    {{/if}}
  {{/each}}
</ul>

<h2>What burger would you like to eat?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>

